# AgentBox v3.0 - Environment Variables Template
# Phase 1: Week 1 - Core Infrastructure Setup
# Copy this file to .env and fill in your actual values

# ===========================================
# CORE APPLICATION SETTINGS
# ===========================================
ENVIRONMENT=development
DEBUG=true
VERSION=3.0.0
APP_NAME=AgentBox

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database connection (optional - Supabase client handles this)
DATABASE_URL=postgresql://postgres:password@db.your-project-ref.supabase.co:5432/postgres

# ===========================================
# E2B SANDBOX CONFIGURATION
# ===========================================
# Get your API key from https://e2b.dev
E2B_API_KEY=your-e2b-api-key-here
E2B_TEMPLATE=Python3

# Sandbox resource limits
MAX_EXECUTION_TIME_SECONDS=300
MAX_MEMORY_MB=1024
MAX_SANDBOXES_PER_USER=3
SANDBOX_TIMEOUT_HOURS=1

# ===========================================
# AI/LLM INTEGRATION
# ===========================================

# Google Gemini (Primary LLM)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# Claude (Complex Reasoning)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI (Fallback)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo

# Perplexity API (for Claude access)
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# ===========================================
# TESTING CONFIGURATION
# ===========================================
TEST_COVERAGE_THRESHOLD=80
TEST_PARALLEL_WORKERS=4
TEST_TIMEOUT_SECONDS=30

# Test database (separate from production)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/agentbox_test

# ===========================================
# SECURITY SETTINGS
# ===========================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/agentbox.log

# Sentry (optional - for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# ===========================================
# REDIS (optional - for caching)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Frontend development server
VITE_SUPABASE_URL=${SUPABASE_URL}
VITE_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
VITE_API_URL=http://localhost:8000

# Hot reload settings
WATCH_FILES=true
RELOAD_ON_CHANGE=true

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================

# API rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Real-time streaming
MAX_WEBSOCKET_CONNECTIONS=100
STREAMING_BUFFER_SIZE=1024
STREAMING_FLUSH_INTERVAL_MS=100

# ===========================================
# TOOL CREATION SETTINGS
# ===========================================

# Tool library configuration
MAX_TOOLS_PER_USER=50
TOOL_EXECUTION_TIMEOUT=300
TOOL_MEMORY_LIMIT_MB=512

# Code generation settings
CODE_GENERATION_MAX_TOKENS=2000
CODE_GENERATION_TEMPERATURE=0.1

# ===========================================
# EMAIL NOTIFICATIONS (optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@agentbox.dev

# ===========================================
# FILE STORAGE (optional)
# ===========================================
# For storing generated files, tool exports, etc.
STORAGE_PROVIDER=local  # local, s3, gcs
STORAGE_BUCKET=agentbox-files
STORAGE_REGION=us-west-2

# AWS S3 (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# These settings override development defaults in production

# Production database
# DATABASE_URL=postgresql://user:password@prod-db:5432/agentbox_prod

# Production Supabase
# SUPABASE_URL=https://your-prod-project.supabase.co
# SUPABASE_ANON_KEY=your-prod-anon-key

# Production security
# JWT_SECRET_KEY=your-production-secret-key-very-long-and-random
# CORS_ORIGINS=https://yourdomain.com

# Production logging
# LOG_LEVEL=WARNING
# SENTRY_DSN=your-production-sentry-dsn

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_REAL_TIME_STREAMING=true
ENABLE_CODE_GENERATION=true
ENABLE_TOOL_CREATION=true
ENABLE_TEST_DRIVEN_MODE=true
ENABLE_SECURITY_VALIDATION=true
ENABLE_PERFORMANCE_MONITORING=true

# Experimental features
ENABLE_ADVANCED_REASONING=false
ENABLE_MULTI_AGENT_COLLABORATION=false
ENABLE_VOICE_INTERFACE=false

# ===========================================
# DOCKER CONFIGURATION (if using Docker)
# ===========================================
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_TAG=latest
COMPOSE_PROJECT_NAME=agentbox

# ===========================================
# IMPORTANT NOTES
# ===========================================
# 
# 1. NEVER commit the actual .env file to version control
# 2. Generate strong, unique keys for JWT_SECRET_KEY
# 3. Use environment-specific values for production
# 4. Keep API keys secure and rotate them regularly
# 5. Monitor API usage to avoid rate limits
# 6. Test all integrations in development first
# 7. Set up monitoring and alerting for production
#
# For detailed setup instructions, see:
# https://github.com/Narendrareddygithub/AgentBox-p/blob/main/docs/setup.md